{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Votes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td><a href="{{ path('movie_show', { 'id': movie.id }) }}">{{ movie.id }}</a></td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.image }}</td>
                <td>{{ movie.votes }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('movie_show', { 'id': movie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('movie_edit', { 'id': movie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movie_new') }}">Create a new movie</a>
        </li>
    </ul>
{% endblock %}
